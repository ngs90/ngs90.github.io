---
const experiences = [
    {
        title: "ML Engineer",
        company: "TV 2",
        period: "2021 - Present",
        description: "Lead ML engineer responsible for developing and deploying production-ready ML models. Implemented MLOps practices and built scalable ML infrastructure."
    },
    {
        title: "Data Scientist",
        company: "Municipality of Copenhagen",
        period: "2018 - 2020",
        description: "Exploring, developing and implementing machine learning algorithms applied to real-world cases."
    },
    {
        title: "Market Risk Manager",
        company: "Nordea",
        period: "2016 - 2018",
        description: "Building infrastructure components satisfying the fundamental review of the trading book requirements."
    }
];
---
<section id="experience" class="section-container">
    <h2>Work Experience</h2>
    <div class="timeline">
        {experiences.map(exp => (
            <div class="timeline-item">
                <div class="timeline-content">
                    <h3>{exp.title}</h3>
                    <h4>{exp.company}</h4>
                    <span class="period">{exp.period}</span>
                    <p>{exp.description}</p>
                </div>
            </div>
        ))}
    </div>
</section>

<style>
    .timeline {
        position: relative;
        max-width: 800px;
        margin: 2rem auto;
    }
    .timeline-item {
        margin-bottom: 2rem;
        padding-left: 2rem;
        border-left: 2px solid var(--primary);
        position: relative;
    }
    .timeline-item::before {
        content: '';
        position: absolute;
        left: -8px;
        top: 0;
        width: 14px;
        height: 14px;
        border-radius: 50%;
        background: var(--primary);
    }
    .timeline-content {
        background: var(--bg-light);
        padding: 1.5rem;
        border-radius: 8px;
    }
    h3 {
        color: var(--primary-light);
        margin: 0 0 0.5rem 0;
    }
    h4 {
        color: var(--text);
        margin: 0 0 0.5rem 0;
    }
    .period {
        color: var(--text-muted);
        font-size: 0.9rem;
    }
</style>