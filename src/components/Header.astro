---
import AnimatedIcons from './AnimatedIcons.astro';
---
<header class="fade-in">
    <div class="header-container">
        <AnimatedIcons />
        <h1>Nicolaj G. Schmit</h1>
        <h2>ML Engineer and Databricks Expert</h2>
    </div>
</header>

<style>
    header {
        text-align: center;
        margin-bottom: 3rem;
    }
    .header-container {
        position: relative;
        padding: 2rem 0;
        min-height: 200px;
    }
    h1 {
        font-size: 3.5rem;
        font-weight: 700;
        line-height: 1;
        margin-bottom: 0.5em;
        background: linear-gradient(135deg, #0ea5e9, #38bdf8);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        position: relative;
        z-index: 1;
    }
    h2 {
        font-size: 2rem;
        color: #94a3b8;
        margin-bottom: 2rem;
        position: relative;
        z-index: 1;
    }
    .fade-in {
        animation: fadeIn 1s ease-out;
    }
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(-20px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>