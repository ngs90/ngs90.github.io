---
const socialLinks = [
    { name: 'LinkedIn', url: 'https://www.linkedin.com/in/nicolaj-schmit-204b8733/' },
    { name: 'Medium', url: 'https://medium.com/@nicolaj.schmit' },
    { name: 'YouTube', url: 'https://www.youtube.com/@convg-ai' },
    { name: 'GitHub', url: 'https://github.com/ngs90' },
    { name: 'Instagram', url: 'https://www.instagram.com/ngs90.public' }
];
---
<section class="social-links fade-in-up">
    <h3>Connect with me</h3>
    <ul>
        {socialLinks.map(link => (
            <li>
                <a href={link.url} target="_blank" rel="noopener noreferrer">
                    {link.name}
                </a>
            </li>
        ))}
    </ul>
</section>

<style>
    .social-links {
        margin-top: 3rem;
        text-align: center;
    }
    h3 {
        font-size: 1.5rem;
        color: #94a3b8;
        margin-bottom: 1.5rem;
    }
    ul {
        list-style: none;
        padding: 0;
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        justify-content: center;
    }
    a {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        color: white;
        text-decoration: none;
        background: rgba(30, 41, 59, 0.5);
        border: 1px solid rgba(148, 163, 184, 0.1);
        border-radius: 8px;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
    }
    a:hover {
        transform: translateY(-2px);
        background: rgba(56, 189, 248, 0.1);
        border-color: #0ea5e9;
        box-shadow: 0 4px 12px rgba(14, 165, 233, 0.1);
    }
    .fade-in-up {
        animation: fadeInUp 1s ease-out 1s both;
    }
    @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>