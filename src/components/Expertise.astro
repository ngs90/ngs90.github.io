---
const expertise = {
    "Machine Learning": ["Tabular ML", "Natural Language Processing", "Reinforcement Learning"],
    "Programming": ["Python", "SQL", "R"],
    "Cloud & MLOps": ["Databricks", "Azure", "Docker", "MLOps, "MLflow"],
    "Tools & Frameworks": ["PySpark", "Spark ML", "scikit-learn", "Pandas", "NumPy"],
    "DevOps and IaC": ["Terraform", "GitHub Actions", "Bicep", "ARM"]
};
---
<section id="expertise" class="section-container">
    <h2>Key Expertise</h2>
    <div class="expertise-grid">
        {Object.entries(expertise).map(([category, skills]) => (
            <div class="expertise-card">
                <h3>{category}</h3>
                <ul>
                    {skills.map(skill => (
                        <li>{skill}</li>
                    ))}
                </ul>
            </div>
        ))}
    </div>
</section>

<style>
    .expertise-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }
    .expertise-card {
        background: var(--bg-light);
        padding: 1.5rem;
        border-radius: 8px;
        border: 1px solid rgba(148, 163, 184, 0.1);
    }
    h3 {
        color: var(--primary-light);
        margin: 0 0 1rem 0;
    }
    ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    li {
        padding: 0.5rem 0;
        color: var(--text);
    }
    li:not(:last-child) {
        border-bottom: 1px solid rgba(148, 163, 184, 0.1);
    }
</style>