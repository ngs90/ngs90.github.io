const updates = [
    {
        date: "2024-01-15",
        title: "New Article on MLOps Best Practices",
        content: "Just published a new article on Medium about implementing MLOps best practices in production environments.",
        link: "https://medium.com/@nicolaj.schmit"
    },
    {
        date: "2023-12-20",
        title: "Speaking at AI Conference",
